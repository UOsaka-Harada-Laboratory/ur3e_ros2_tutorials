<launch>
    <arg name="fake_execution" default="false"/>
    <arg name="use_gripper"     default="false"/>
    <arg name="ur3e_ip"         default="192.168.0.11"/>
    <arg name="tool_tcp_port"   default="54321"/>
    
    <group if="$(arg fake_execution)">
        <node pkg="ur3e_tutorials" name="pick_and_place" type="pick_and_place_fake.py" output="screen" />
    </group>
    <group unless="$(arg fake_execution)">
        <node pkg="ur3e_tutorials" name="pick_and_place" type="pick_and_place.py" output="screen">
            <param name="use_gripper" type="bool" value="$(arg use_gripper)"/>
            <param name="ur3e_ip" value="$(arg ur3e_ip)"/>
            <param name="tool_tcp_port" type="int" value="$(arg tool_tcp_port)"/>
        </node>
    </group>
</launch>